---
const authors = [
  { name: 'Yaofang Liu', affs: ['1', '7'], note: '*' },
  { name: 'Yumeng Ren', affs: ['1', '7'] },
  { name: 'Aitor Artola', affs: ['1', '7'] },
  { name: 'Yuxuan Hu', affs: ['2', '3'] },
  { name: 'Xiaodong Cun', affs: ['4'] },
  { name: 'Xiaotong Zhao', affs: ['5'] },
  { name: 'Alan Zhao', affs: ['5'] },
  { name: 'Raymond H. Chan', affs: ['6', '7'] },
  { name: 'Suiyun Zhang', affs: ['3'] },
  { name: 'Rui Liu', affs: ['3'], note: '†' },
  { name: 'Dandan Tu', affs: ['3'], note: '†' },
  { name: 'Jean-Michel Morel', affs: ['1'], note: '†' },
];

const affiliations = [
  { id: '1', text: 'City University of Hong Kong' },
  { id: '2', text: 'The Chinese University of Hong Kong' },
  { id: '3', text: 'Huawei Research' },
  { id: '4', text: 'Great Bay University' },
  { id: '5', text: 'AI Technology Center, Tencent PCG' },
  { id: '6', text: 'Lingnan University' },
  { id: '7', text: 'Hong Kong Centre for Cerebro-Cardiovascular Health Engineering' },
];
---

<div class="authors-container">
  <div class="author-list">
    {authors.map((author, index) => (
      <span class="author-name">
        {author.name}
        {author.affs && <sup>{author.affs.join(',')}</sup>}
        {author.note && <sup>{author.note}</sup>}
        {index < authors.length - 1 && ', '}
      </span>
    ))}
  </div>
  <div class="affiliation-list">
    {affiliations.map((aff) => (
      <span class="affiliation-item">
        <sup>{aff.id}</sup>{aff.text}
      </span>
    ))}
  </div>
  <div class="notes">
    <p><sup>*</sup>Work partially done during an internship at Huawei Research. <sup>†</sup>Corresponding authors</p>
  </div>
</div>

<style>
  .authors-container {
    text-align: center;
    margin-top: 2rem;
    font-size: 0.9rem;
    line-height: 1.5;
    color: #a1a1aa; /* zinc-400 */
  }
  .author-list {
    margin-bottom: 1rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.25rem 0.5rem;
  }
  .author-name {
    white-space: nowrap;
  }
  .affiliation-list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 0.25rem 1.5rem;
    font-size: 0.8rem;
    color: #71717a; /* zinc-500 */
  }
  .notes {
    margin-top: 1rem;
    font-size: 0.8rem;
    color: #71717a; /* zinc-500 */
  }
</style> 